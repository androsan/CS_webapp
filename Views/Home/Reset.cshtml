@model CS_webapp.Models.Category

<form method="post">
    <input asp-for="Id" type="hidden" />

    <input asp-for="InitDate" type="hidden" />
    <input asp-for="ResetDate" type="hidden" />
    <input asp-for="LastDate" type="hidden" />



     <div class="border p-3">
         <div asp-validation-summary="ModelOnly" class="text-danger"></div>
         
         <div class="form-group row">
             <h2 class="text-info pl-3">Novo geslo</h2>
         </div>

         <div class="row">
             <div class="col-8">
                 <div class="form-group row">
                     <div class="col-4">
                         <label asp-for="Name"></label>
                     </div>
                     <div class="col-8">
                         <input asp-for="Name" class="form-control"/>
                         <span asp-validation-for="Name" class="text-danger"></span>
                     </div>
                 </div>
                 
                 <div class="form-group row">
                     <div class="col-4">
                     <label>Novo geslo</label>
                     </div>
                     <div class="col-8">
                     <input type="text" name="NewOrderFirst" class="form-control"/>
                     <!--
                     <input asp-for="DisplayOrder" class="form-control"/>
                     <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                     -->
                     </div>
                     <div class="col-4">
                     <label>Ponovi geslo</label>
                     </div>
                     <div class="col-8">
                     <input type="text" name="NewOrderSecond" class="form-control"/>
                     <!--
                     <input asp-for="NewOrder" class="form-control"/>
                     <span asp-validation-for="NewOrder" class="text-danger"></span>-->
                     </div>
                 </div>

                 <h1>@TempData["password_error"]</h1>

                  <div class="form-group row">
                      <div class="col-8 offset-4 row">
                          <div class="col">
                              <input type="submit" class="btn btn-info w-100" value="Potrdi"/>
                          </div>
                          <div class="col">
                              <a asp-action="Index" class="btn btn-success w-100"><i class="fas fa-arrow-left"></i> &nbsp; Seznam uporabnikov</a>
                          </div>
                      </div>
                  </div>
             </div>
         </div>
     </div>

</form>

@section Scripts{
    @{ <partial name="_ValidationScriptsPartial" />}
} 